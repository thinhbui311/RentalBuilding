<div class="px-2 lg:p-0">
  <div class="banner grid grid-cols-4 gap-2 sm:gap-4 pb-4 border-b-2 border-gray-300">
    <% (1..4).each do |i| %>
      <%= image_tag "banners/banner_#{i}.jpg", class: "h-full object-cover" %>
    <% end %>
  </div>
  <div class="apartment-list pt-4 pb-8 space-y-4">
    <p class="text-gray-600 font-medium">Rental Buildings</p>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-16 md:gap-x-20 lg:gap-x-32 gap-y-6 md:gap-y-10 lg:gap-y-12">
      <% @buildings.each do |building| %>
        <div class="flex border-2 border-gray-300 h-40 sm:h-32 md:h-44">
          <%= image_tag building.images.first, class: "h-full object-cover w-2/5" %>
          <div class="flex grow flex-col justify-between gap-2 p-3">
            <div class="flex flex-col gap-2">
              <p class="text-gray-700 text-xl md:text-2xl lg:text-3xl"><%= building.name %></p>
              <p class="uppercase text-gray-500 text-sm md:text-base"><%= building.addresses.first.street_name %></p>
            </div>
            <%= link_to "See Apartments", building_path(building), class: "self-start rounded text-white text-sm p-2 bg-zinc-700 hover:bg-zinc-900 transition-all transition-300" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
